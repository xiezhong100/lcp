.mc {
	display: none;
	position:relative;
	top: -12px;
	width: 220px;
	height: auto;
	border: solid #999999;
	border-width: 0 1px 1px;
	overflow: visible;
	zoom: 1;
	padding-top: 3px;
	padding-right: 3px;
	padding-bottom: 3px;
	padding-left: 0;
	left: 1px;
}

body {
font: 14px/150% Arial, Verdana, "宋体b8b\4f53";
color: #666;
}
.mc span {
	display: block;
	position:absolute;
	height: 35px;
	text-align: left;
	vertical-align: middle;
	width: 202px;
}

h3 {
	padding-left: 18px;
	background-position: -128px 8px;
	font-weight: bold;
	line-height: 35px;
	border-top-width: 0px;
	border-right-width: 0;
	border-bottom-width: 0px;
	border-left-width: 0;
	color: #FFFFFF;
	font-size: 15px;
}

h3 a:link,h3 a:visited {
color: #FFFFFF;
}
h3 a:hover {
	color:#FF0000;
	text-decoration: underline;
	font-weight: bold;
}

.item {
	width: 202px;
	height: 35px;
	border-top: 1px solid white;
	background-color: #8CB98E;
	padding-left:20px;
}
.item .i-mc {
	z-index:9;
	display: block;
	position: absolute;
	left: 220px;
	top: 3px;
	width: 550px;
	border: 1px solid #DDD;
	overflow: hidden;
	-moz-box-shadow: 0 0 10px #DDD;
	-webkit-box-shadow: 0 0 10px #DDD;
	box-shadow: 0 0 10px #DDD;
	float: left;
	background-color: #C1E0B8;
}

.item .i-mc-bak {
display: none;
position: absolute;
left: 198px;
top: 3px;
width: 550px;
border: 1px solid #DDD;
background: white;
overflow: hidden;
-moz-box-shadow: 0 0 10px #DDD;
-webkit-box-shadow: 0 0 10px #DDD;
box-shadow: 0 0 10px #DDD;
}

.subitem dl {
	overflow: hidden;
	zoom: 1;
	float: none;
	border-top-style: none;
	border-right-style: none;
	border-bottom-style: solid;
	border-left-style: none;
	height: 50px;
	width: 550px;
	border-top-width: 1px;
	border-right-width: 1px;
	border-bottom-width: 1px;
	border-left-width: 1px;
	clear: none;
	line-height: 20px;
	margin: 4px;
	padding: 0px;
}

.subitem dt {
	float: left;
	width: 54px;
	line-height: 22px;
	text-align: right;
	font-weight: bold;
	color: #E4393C;
	padding-top: 3px;
	padding-right: 3px;
	padding-bottom: 0px;
	padding-left: 14px;
}
.subitem dd {
	float: left;
	clear:none;
	overflow: hidden;
	zoom: 1;
	padding-top: 3px;
	padding-right: 5;
	padding-bottom: 0;
	padding-left: 5;
	text-align: center;
}

.subitem em {
	float: left;
	border-top-width: 0px;
	border-right-width: 0px;
	border-bottom-width: 0px;
	border-left-width: 0px;
	border-top-style: none;
	border-right-style: none;
	border-bottom-style: none;
	border-left-style: solid;
	border-left-color: #9999FF;
	padding-top: 0;
	padding-right: 23px;
	padding-bottom: 0;
	padding-left: 12px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 0px;
	margin-left: 0px;
}

em {
font-style: normal;
}

.subitem dd a {
white-space: nowrap;
}

.subitem dt a {
color: #E4393C;
font: 12px/150% Arial, Verdana, "宋体b8b\4f53";
text-decoration: underline;
}

a:link, a:visited {
color: #666;
text-decoration: none;
}
