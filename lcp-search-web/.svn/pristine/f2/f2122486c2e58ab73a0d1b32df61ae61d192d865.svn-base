/*页面总体样式控制*/
body {
    background: url("../images/body-background.gif") repeat-x scroll 0 0 transparent;
    font: 0.8em/1.5 "arial",sans-serif;
	color: #404040;
}
/*页面总体样式控制结束*/
/**/
html, body, div, span, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, address, big, cite, code, del, em, font, img, ins, small, strong, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend {
    margin: 0;
    padding: 0;
}


/*回到顶部*/
#toppanel {
    position: relative;
    z-index: 1000;
    width: 1210px;
    margin: 0 auto;
    width: 990px;
}	
#sidepanel {
    bottom: 0;
    position: fixed;
    right: 0;
    z-index: 1000;
}
.hide {
    display: none;
}

#sidepanel a:link, #sidepanel a:visited {
    background-position: 0 -606px;
}
#sidepanel a {
    display: block;
    height: 66px;
    line-height: 14px;
    margin: 5px 0;
    padding: 28px 4px 0;
    position: relative;
    text-align: center;
    text-decoration: none;
    width: 17px;
}
#sidepanel a, #sidepanel b {
    background-image: url("http://misc.360buyimg.com/lib/skin/2012/i/20111221C.png");
    background-repeat: no-repeat;
}

/*回到顶部结束*/

#category-panel {
	float: left;
	width: 225px;
	margin-top: 10px;
	margin-right: 0px;
}

#advert-panel {
	float: left;
	height: 390px;
	width: 600px;
	margin: 5px;
	margin-top: 5px; 
}

#top-advert-panel {
	height: 220px;
	width: 600px;
	position: relative;
	overflow:hidden;
}

#top-advert-panel .slide-items, #top-advert-panel .slide-items li {
height: 220px;
float:left;
}
#top-advert-panel .slide-items {
	position:absolute;
	overflow: hidden;
}

#top-advert-panel ul {
	list-style:none;
}
#top-advert-panel .slide-controls {
position: absolute;
bottom: 3px;
z-index: 1;
width: 530px;
height: 22px;
padding: 4px 10px;
text-align: right;
}
#top-advert-panel .slide-controls span {
	width: 22px;
	height: 22px;
	line-height: 22px;
}
.slide-controls .curr {
background: #E4393C;
}

.slide-controls span {
display: inline-block;
margin: 0 1px;
background: #999;
text-align: center;
cursor: default;
color: white;
border-radius: 12px;
-moz-border-radius: 12px;
-webkit-border-radius: 12px;
}

#bottom-advert-panel {
	height: 165px;
}

#right-panel {
	float: left;
	height: 390px;
	width: 375px;
	margin-top: 5px;
}

#top-right-panel {
	height: 213px;
	background-color:#F5F5F5;
	border: 1px solid #DDDDDD;
}

#bottom-right-panel .help-guest {
	clear:both;
	padding-top:40px;
}
