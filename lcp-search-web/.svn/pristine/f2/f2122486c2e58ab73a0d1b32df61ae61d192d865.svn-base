#bottom-right-panel .security-help {
	text-align:center;
	padding-left:50px;
	padding-top:15px;
	height:70px;
}

#bottom-right-panel .security-help .list-product li {
    display: inline;
    float: left;
    margin: 0 10px;
    width:70px;
}
#bottom-right-panel .security-help .cell-security-icon {
    margin-bottom: 3px;
}

.cell-security-icon {
    background: url("../images/security_bg.jpg") no-repeat scroll 0 0 transparent;
    display: block;
    height: 33px;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
    width: 28px;
}

#bottom-right-panel .security-help .title-name-1 {
    background-position: 0 0;
}
#bottom-right-panel .security-help .title-name-2 {
    background-position: -80px 0;
}
#bottom-right-panel .security-help .title-name-3 {
    background-position: -160px 0;
}
#bottom-right-panel .security-help .title-name2 {
    background-position: 0 -160px;
}

#bottom-right-panel {
	height: 165px;
	margin-top: 10px;
	background-color:#F5F5F5;
	border: 1px solid #DDDDDD;
}

/* switchBox */
#ruleAndNotice{
	height:213px;
}
#ruleAndNotice dt{
	height:20px;
	margin: 0px;
}
#ruleAndNotice dt a{
	cursor:pointer;
	float:left;
	font-size:12px;
	height:20px;
	line-height:20px;
	text-align:center;
	text-decoration:none;
	font-style:normal;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: normal;
	width: 50px;
	border-right-width: 1px;
	border-right-style: solid;
	border-right-color: #999999;
	background-color: #cccccc;
}
#ruleAndNotice dt .on{	
	background: url("../images/navbar-select-bg.gif") repeat scroll 0 0 transparent;
	color:#FFFFFF;}
#ruleAndNotice dt .active{background-color:#ffffcc;font-weight:bolder;}
#ruleAndNotice dt .on, .switchBox dt .active, .switchBox a:hover{}
#ruleAndNotice dt .fat{color:#0000ff;width:150px;}
#ruleAndNotice dt .fat:hover{color:#ffff00;}
#ruleAndNotice dd{
	clear:both;
	display:none;
	height:100px;
	height:100px;
	min-height:100px!important;
	font-family:"宋体";
	padding-top: 0px;
	padding-right: 0px;
	padding-bottom: 0px;
	padding-left: 15px;
}

#ruleAndNotice dd a:hover{
	color:#84B199;
}

#show-product {
	clear: left;
}

.floor-category {
	height: 451px;
	margin-top: 10px;
	background-color: #FFFFFF;
	clear: left;
}

#show-product .floor-separator{
	border-bottom: 2px solid #DDDDDD;
	height:35px;
	margin-bottom:5px;
	padding-top:10px;
	font-size:14px;
}

#show-product .floor-separator .icon-bg{
	background: url("../images/popo.jpg") no-repeat scroll 0 0 transparent;
	height: 32px;
    padding-left: 8px;
    padding-top: 5px;
    width: 32px;
    color:#FFFFFF;
}

#show-product .floor-separator .floor-title{
	height:30px;
	margin-bottom:5px;
	font-size:18px;
	padding-top:10px;
	margin-left:0px;
}

.left-floor-category {
	height: 400px;
	background-color: #F5F5F5;
	width: 180px;
	float: left;
	border-top-width: 0px;
	border-bottom-width: 0px;
	border-left-width: 0px;
	margin-right: 10px;
}

.left-floor-category dl{
	background-color:#CCCCCC;
	color:#ffffff;
	cursor:pointer;
	font-size:14px;
	height:30px;
	line-height:30px;
	text-align:center;
	text-decoration:none;
	width:180px;
	font-style:normal;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	clear: both;
}

.left-floor-category dt a{
	text-decoration: none;
	text-align: center;
	width: 90px;
	float: left;
	line-height: 40px;
}

.right-floor-category {
	height: 400px;
	width: 1010px;
	float: left;
}
