body{font-size:12px;font-family:"微软雅黑", Verdana, Geneva, sans-serif, "宋体";}
dl, dt, dd, ul, li, p, h5{padding:0;margin:0;}

.productShowByCategory{width:1010px;margin:0 0;height:390px;}
.productShowByCategory h2{font-size:16px;text-align:center;}
.productShowByCategory h5{font-size:13px;}
/* switchBox */
.switchBox{border:5px solid #999999;width:1000px;height:390px;}
.switchBox dt{
	height:30px;
}
.switchBox dt a{
	background-color:#99CC99;
	color:#ffffff;
	cursor:pointer;
	float:left;
	font-size:14px;
	height:30px;
	line-height:30px;
	text-align:center;
	text-decoration:none;
	width:200px;
	font-style:normal;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
}
.switchBox dt .on{background-color:#ffffff;font-weight:bolder;}
.switchBox dt .active{background-color:#ffffcc;font-weight:bolder;}
.switchBox dt .on, .switchBox dt .active, .switchBox a:hover{color:#cc0000;}
.switchBox dt .fat{color:#0000ff;width:150px;}
.switchBox dt .fat:hover{color:#ffff00;}
.switchBox dd{clear:both;display:none;height:270px;height:100px;min-height:100px!important;padding:0px;font-family:"宋体";}
.switchBox li{
	margin-left:20px;
	float: left;
	clear: right;
	height: 155px;
	width: 180px;
	text-align: center;
	list-style-type: none;
	margin-top: 20px;
}
.switchBox li a {
	font-size: 12px;
	font-family: Arial, Helvetica, sans-serif;
	text-decoration: none;
	color: #999999;
}
.switchBox li .p-name {
	height: 35px;
	width: 180px;
	font-size: 12px;
	font-family: Arial, Helvetica, sans-serif;
}

.switchBox li .p-price {
	height: 20px;
	width: 180px;
}
